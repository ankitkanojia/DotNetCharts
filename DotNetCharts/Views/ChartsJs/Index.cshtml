@{
    ViewBag.Title = "Chart.Js";
    Layout = "~/Views/Shared/_chartjs.cshtml";
}

<div class="jumbotron" style="padding-bottom:1%;padding-top:1%">
        <div class="row">
            <div class="col-md-12">
                <h2 class="text-success"><b>chartjs Chart</b> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</h2>
                <div>
                    <a class="btn btn-success btn-sm" href="https://www.chartjs.org" target="_blank">OFFICIAL SITE</a>
                    <a class="btn btn-danger btn-sm" href="https://www.chartjs.org/docs/latest/notes/license.html" target="_blank">PRICE</a>
                </div>
                <p>
                    It's easy to get started with Chart.js. All that's required is the script included in your page along with a single node to render the chart.
                </p>
            </div>
        </div>
    </div>

<div class="row">
    <div class="col-md-12">
        <h3 class="text-danger">Chart List <small><a style="font-size:medium" target="_blank" href="@Url.Action("ChartCombination","ChartsJs")">( Collection Charts )</a></small></h3>
    </div>
    <div class="col-md-4">
        <h3 class="text-danger">&nbsp;</h3>
        <ul class="tree">
            <li><a target="_blank" href="@Url.Action("BarChart","ChartsJs")">Bar Chart</a></li>
            <li><a target="_blank" href="@Url.Action("RadarChart","ChartsJs")">Radar Chart</a></li>
            <li><a target="_blank" href="@Url.Action("AreaChart","ChartsJs")">Area Chart</a></li>
            <li><a target="_blank" href="@Url.Action("PolarChart","ChartsJs")">Polar Chart</a></li>
        </ul>
    </div>
    <div class="col-md-4">
        <h3 class="text-danger">&nbsp;</h3>
        <ul class="tree">
            <li><a target="_blank" href="@Url.Action("BubbleChart","ChartsJs")">Bubble Chart</a></li>
            <li><a target="_blank" href="@Url.Action("DoughnutChart","ChartsJs")">Doughnut Chart</a></li>
            <li><a target="_blank" href="@Url.Action("MixedChart","ChartsJs")">Mixed Chart</a></li>
        </ul>
    </div>
</div>