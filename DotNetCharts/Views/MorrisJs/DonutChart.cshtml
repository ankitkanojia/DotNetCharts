@{
    ViewBag.Title = "Donut Chart";
    Layout = "~/Views/Shared/_morrisjs.cshtml";
}

<div class="row mt-5 mb-5">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                Simple Donut Chart
            </div>
            <div class="card-body">
                <div id="graph"></div>
            </div>
        </div>
    </div>
</div>

<script>
    Morris.Donut({
        element: 'graph',
        data: [
            { label: "Download Sales", value: 12 },
            { label: "In-Store Sales", value: 30 },
            { label: "Mail-Order Sales", value: 20 }
        ]
    });
</script>