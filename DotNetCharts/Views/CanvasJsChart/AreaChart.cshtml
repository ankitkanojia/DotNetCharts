        <div class="card">
            <div class="card-header">
                Simple Area Chart
            </div>
            <div class="card-body">
                <div id="chartContainer" style="height: 300px; width: 100%;"></div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                Multi Series Spline Area Chart
            </div>
            <div class="card-body">
                <div id="multiSeriesChartContainer" style="height: 300px; width: 100%;"></div>
            </div>
        </div>
    </div>
</div>

