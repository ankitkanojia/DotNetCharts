@{
    ViewBag.Title = "AreaChart";
    Layout = "~/Views/Shared/_CanvasJSChartLayout.cshtml";
}

<div class="row pt-3 px-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                Simple Area Chart
            </div>
            <div class="card-body">
                <div id="chartContainer" style="height: 300px; width: 100%;"></div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                Multi Series Spline Area Chart
            </div>
            <div class="card-body">
                <div id="multiSeriesChartContainer" style="height: 300px; width: 100%;"></div>
            </div>
        </div>
    </div>
</div>

